{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    //"sourceMap": false,
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "target": "es6",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2022",
      "dom"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": "./src",
    "paths": {
      "shared/*": [
        "shared/*"
      ],
      "app/*": [
        "app/*"
      ]
    }
  }
}
